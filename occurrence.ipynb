   "source": [
    "x=input('Enter a sentence: ')\n",
    "y=x.lower()\n",
    "w=y.split()\n",
    "dic={}\n",
    "for i in w:\n",
    "    if i not in dic:\n",
    "        dic[i]=1\n",
    "    else:\n",
    "        dic[i]+=1\n",
    "for i in dic:\n",
    "    print(i,'occurs ',dic[i],'times')\n"
   ]
